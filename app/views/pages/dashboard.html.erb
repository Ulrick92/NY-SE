<h1>Dashboard</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <%= cl_image_tag(current_user.photo, width: 100, :transformation=>[
  {:width=>400, :height=>400, :gravity=>"face", :radius=>"max", :crop=>"crop"},
  {:width=>200, :crop=>"scale"}
  ], style:"border-radius: 50%") %>
      <h4><%= current_user.first_name %> <%= current_user.last_name %> </h4>
    </div>
    <div class="col-xs-12 col-sm-6">
      <div class="add">
        <%= link_to " + Create an add ", new_sock_path, class: "btoun-rose-cool navbar-wagon-link" %>
      </div>
    </div>
    </div>
  </div>
</div>

<div class="container">
  <h2>My socks and bookings</h2>

  <ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#home">My socks</a></li>
    <li><a data-toggle="tab" href="#menu1">My bookings</a></li>
  <div class="tab-content">
    <div id="home" class="tab-pane fade in active">
      <ul class="inbox">
        <% @my_socks.each do |sock| %>
          <li class="message">
              <div class="message-profile flex-item"><%= cl_image_tag(sock.user.photo) %></div>
              <div class="message-detail flex-item">
                <div class="name"><strong><%= sock.user.email %></strong></div>
              </div>
              <div class="message-text">
                <strong> <%= sock.shipping_method %> </strong>
              </div>
              <div class="message-statut flex-item">
                <%= link_to 'Accept', validates_path(sock), method: :patch, class: 'btn btn-success' %>
                <%= link_to 'Decline', refuses_path(sock), method: :patch, class: 'btn btn-danger' %>
              </div>
            </li>
        <% end %>
      </ul>    </div>
    <div id="menu1" class="tab-pane fade">
      <ul class="inbox">
        <% @my_transactions.each do |transaction| %>
          <li class="message">
              <div class="message-profile flex-item"><%= cl_image_tag(transaction.user.photo) %></div>
              <div class="message-detail flex-item">
                <div class="name"><strong><%= transaction.user.email %></strong></div>
                <div class="date"><%= transaction.starts_on %></div>
                <div class="date"><%= transaction.ends_on %></div>
              </div>
              <div class="message-text">
                <strong> <%= transaction.sock.shipping_method %> </strong>
              </div>
              <div class="message-statut flex-item">
                <div class="statut"><%= transaction.statut %></div>
                <div class="price"> <%= transaction.sock.price_per_day %></div>
              </div>
            </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
