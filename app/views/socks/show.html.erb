<div class="img-product" style="background: url('<%= @sock.photo %>')center center; background-size: cover;"></div>
<div class="sock-detail-container">
  <div class="sock-display">
    <div>
      <h1><%= @sock.title %></h1>
      <div class="sock-features">
        <div class="item">
          <div><i class="fas fa-shoe-prints"></i> <%= @sock.size %></div>
        </div>
        <div class="item">
          <div><i class="fas fa-palette"></i> <%= @sock.color %></div>
        </div>
      </div>
      <div class = "slidebar-show">
         <h2>Clean</h2>
         <ul>
            <li><i class="far fa-frown"></i></li>
            <li><%= render "/components/slidebar" %></li>
            <li> <i class="far fa-smile"></i></li>
         </ul>
      </div>
      <div class="sock-description">
        <h2>Description</h2>
        <p><%= @sock.description %></p>
      </div>
    </div>
  </div>
  <div class="sock-booking">
    <div>
      <%= render "form_booking" %>
    </div>
  </div>
</div>
