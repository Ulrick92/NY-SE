<div class="container text-center">
  <h1>All socks</h1>
</div>

<div class="container">
  <div class="row">
    <% @socks.each do |sock| %>
      <%= link_to sock_path(sock.id) do %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),url('<%= cl_image_path sock.photo %>');">
            <div class="card-category">New</div>
            <div class="card-description">
              <h2> <%= sock.title %></h2>
              <p><%= sock.description %></p>
            </div>
            <img class="card-user" url="http://kitt.lewagon.com/placeholder/users/ssaunier" >
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<div class="btn-container text-center">
  <%= link_to '+ Add a sock', new_sock_path, class: "btn btn-success btn-add " %>
</div>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
></div>
